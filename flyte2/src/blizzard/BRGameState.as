package blizzard{	import flyte.Game;	import flyte.io.GameState;	public class BRGameState extends GameState	{		public function BRGameState(g:flyte.Game)		{			super(g,"blizzards-run")			if(local.data.worlds == null) local.data.worlds = {}		}				public function get worldState():Object		{			if(local.data.worlds[game.world.id] == null)			{				local.data.worlds[game.world.id] = createEmptyWorldState()			}						return local.data.worlds[game.world.id]		}				public function createEmptyWorldState():Object		{			return {				collected:{},				hero:{}			}		}	}}