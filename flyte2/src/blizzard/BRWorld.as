package blizzard{	import flash.events.Event;	import flash.ui.Keyboard;		import flyte.core.Hero;	import flyte.core.flWorld;	import flyte.events.InputEvent;
	public class BRWorld extends flyte.core.flWorld	{		public var debugMode:Boolean = true		public function BRWorld()		{			this.gravity = 5			this.hero = this.getChildByName("blizzard_hero") as flyte.core.Hero			this.hero.jumpHeight = 35			addEventListener(flash.events.Event.ADDED_TO_STAGE,function(e:Event):void			{				camera.setTarget(hero)			})			hero.input.addEventListener(InputEvent.DOWN,function(e:InputEvent):void			{				if(e.keyCode == 90) camera.distance = Math.max(0.5,camera.distance - 0.05)				if(e.keyCode == 88) camera.distance = Math.min(3,camera.distance + 0.05)			})		}	}}