package blizzard{	import flash.ui.Keyboard;		import flyte.core.Hero;	import flyte.events.ActionEvent;	import flyte.events.InputEvent;	import flyte.io.Input;		public class Blizzard extends Hero	{		public function Blizzard()		{			this.acceleration = 4			this.velocityControl.max = 100			animation.setDefault("still")			input.addEventListener(InputEvent.DOWN,function(e:InputEvent):void			{				if(e.keyCode == Input.ATTACK && this.onGround)				{					animation.display("action")				}			})							event.when(ActionEvent.JUMP,function(e:ActionEvent):void			{				animation.display("jump",false,true)			})							event.when(ActionEvent.LAND,function(e:ActionEvent):void			{				if(input.isDown(Input.LEFT) || input.isDown(Input.RIGHT))				{					animation.display("run",true)				}else{					animation.display("still")				}			})						event.when(ActionEvent.BEGIN_MOVING,function(e:ActionEvent):void			{ 				if(onGround) animation.display("run",true)			})			event.when(ActionEvent.STOP_MOVING,function(e:ActionEvent):void			{				if(onGround) animation.display("still")				})			event.when(ActionEvent.LEAVE_WORLD,function(e:ActionEvent):void			{				x = defaults.position.x				y = defaults.position.y				gravity.offGround()			})		}	}}