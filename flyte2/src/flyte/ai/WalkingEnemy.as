package flyte.ai{	import flyte.core.Animate;	import flyte.elements.Tile;	import flyte.events.GameEvent;	import flyte.events.CollisionEvent;		public class WalkingEnemy extends Animate	{		public var minX:Number = 0		public var maxX:Number = 0				public var limitPlatform:Tile		public var reverseOnCollide:Boolean = false					public var reverseOffset:Number = 0					public var dir:int = 1					public function WalkingEnemy()		{			event.onLoopDo(function(e:GameEvent):void			{				if(minX != 0 && maxX != 0)				{					if(x > maxX || x < minX)					{						reverse()					}				}								if(limitPlatform != null)				{					if(x > limitPlatform.x + (limitPlatform.width/2) || x < limitPlatform.x - (limitPlatform.width/2))					{						reverse()					}				}			})							event.when([CollisionEvent.LEFT,CollisionEvent.RIGHT],function(e:CollisionEvent):void			{				if(reverseOnCollide)				{					reverse()				}			})										}				public function reverse():void		{			dir *= -1			scaleX *= -1			x += reverseOffset		}			}}