package flyte.cogs{	import flash.display.DisplayObject;	import flash.geom.Rectangle;		import flyte.core.Base;	import flyte.core.flWorld;		public class SensorCog extends BaseCog	{		public var platformMode:Boolean = false		public function SensorCog(t:Base)		{			_target = t		}				public function left(d:DisplayObject=null):Rectangle		{			if(d == null) d = _target.world as DisplayObject;			var r:Rectangle = _target.getBoundsBox(d)			r.width /= 2			if(!platformMode){				r.height -= 20				r.y += 10			}			return r		}				public function right(d:DisplayObject=null):Rectangle		{			if(d == null) d = _target.world as DisplayObject;			var r:Rectangle = _target.getBoundsBox(d)			r.width /= 2			r.x += r.width			if(!platformMode){				r.height -= 20				r.y += 10			}			return r		}				public function top(d:DisplayObject=null):Rectangle		{			if(d == null) d = _target.world as DisplayObject;			var r:Rectangle = _target.getBoundsBox(d)			r.height /= 2			return r		}				public function bottom(d:DisplayObject=null):Rectangle		{			if(d == null) d = _target.world as DisplayObject;			var r:Rectangle = _target.getBoundsBox(d)			r.height /= 2			r.y += r.height			return r		}				}}