package flyte.sound{	import flash.events.Event;	import flash.media.Sound;	import flash.media.SoundChannel;	import flash.net.URLRequest;	import flash.utils.Dictionary;		public class SoundManager	{		public static var sounds:Dictionary = new Dictionary(true);				public static function registerSound(item:*):void		{			if(item is Array)			{				for(var i:uint=0;i<item.length;i++)				{					registerSound(item[i])				}				return			}						if(item is Class)			{				sounds[item] = {playing:false,sound:function():Sound				{					return new item()				}}			}						if(item is String)				{					sounds[item] = {playing:false,sound:new Sound(new URLRequest(item))}			}		}				public static function playSound(item:*,again:Boolean=false):void		{			if(sounds[item] == null) return			var sound:Object = sounds[item]			if(sound.playing && !again) return			sounds[item].playing = true			var theSound:Sound			if(sound.sound is Function)			{				theSound = sound.sound()			}else{				theSound = sound.sound			}			var channel:SoundChannel = theSound.play()			channel.addEventListener(flash.events.Event.SOUND_COMPLETE,function(e:Event):void			{				sounds[item].playing = false			})		}	}				}